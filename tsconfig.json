{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "ES2022"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@ahead/ui": ["packages/ui/src"],
      "@ahead/ui/*": ["packages/ui/src/*"],
      "@ahead/shared": ["packages/shared/src"],
      "@ahead/shared/*": ["packages/shared/src/*"],
      "@ahead/db": ["packages/db/src"],
      "@ahead/db/*": ["packages/db/src/*"]
    }
  },
  "exclude": ["node_modules"]
}
